{% extends "template.twig" %}
{% block conteudo %}
	<div class="container">

      <br><br><br><hr>

      <div class="row ">

        <div class="col-sm-5 cadastro" ><br><br>
          <h3 align="center">Cadastre-se</h3><br><br>

          <form method="post" action="/cadastro">

            <div class="form-group">
              <label for="nome">Nome</label>
